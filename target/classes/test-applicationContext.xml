    <bean id="dataSource" class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
        <property name="driverClass" value="com.mysql.jdbc.Driver" />
        <property name="url" value="jdbc:mysql://127.0.0.1:3306/testdb" />
        <property name="username" value="root" />
        <property name="password" value="1234" />
    </bean>
	<bean id="userDao" class="com.toby.pract1.UserDaoJdbc">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<bean id="UserLevelUpgradePolicy" class="com.toby.pract1.UserLevelUpgradePolicyBtype">
		<property name="userDao" ref="userDao"></property>
	</bean>
	
	<bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
    <bean id="mailSender" class="com.toby.pract1.DummyMailSender">
    </bean>
	
	<bean id="userService" class="com.toby.pract1.UserService">
		<property name="userDao" ref="userDao" />
		<property name="transactionManager" ref="transactionManager" />
		<property name="UserLevelUpgradePolicy" ref="UserLevelUpgradePolicy" />
		<property name="mailSender" ref="mailSender" />
	</bean>
	
	
</beans>