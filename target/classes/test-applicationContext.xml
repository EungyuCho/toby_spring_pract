			<tx:method name="*" propagation="REQUIRED"/>
	
		</tx:attributes>
	</tx:advice>
	
	 <aop:config>
	 	<aop:advisor advice-ref="transactionAdvice" pointcut="bean(*Service)"/>
	 </aop:config>
	 -->
    <bean id="mailSender" class="com.toby.pract1.DummyMailSender" />
	
	<bean id="userService" class="com.toby.pract1.UserServiceImpl">
		<property name="userDao" ref="userDao" />
		<property name="UserLevelUpgradePolicy" ref="UserLevelUpgradePolicy" />
		<property name="mailSender" ref="mailSender" />
	</bean>
	
	<bean id="testUserService" class="com.toby.pract1.UserServiceITest$TestUserService" parent="userService" />
	
	<bean class="org.springframework.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator"/>	
</beans>